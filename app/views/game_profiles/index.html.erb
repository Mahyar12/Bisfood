<p id="notice"><%= notice %></p>

<h1>Game Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Points</th>
      <th>Money</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_profiles.each do |game_profile| %>
      <tr>
        <td><%= game_profile.points %></td>
        <td><%= game_profile.money %></td>
        <td><%= game_profile.level %></td>
        <td><%= link_to 'Show', game_profile %></td>
        <td><%= link_to 'Edit', edit_game_profile_path(game_profile) %></td>
        <td><%= link_to 'Destroy', game_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game Profile', new_game_profile_path %>
