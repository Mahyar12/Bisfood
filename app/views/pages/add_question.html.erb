<% if admin_user_signed_in? %>
<div class="row">
	<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 ">
		<form id="form" action="#">
			<div class="field">
				Question: <input type="text" id="question" name="question"><br>
			</div>

			<div class="field">
				<select id="qtypes">
				  <% @qtypes.each do |qtype| %>
				    <option value="<%= qtype.name %>"><%= qtype.name %></option>      
				  <% end %>
				</select>
			</div>		

			<button class="btn btn-success btn-lg" type="button" id="add-ans" data-toggle="dropdown" style="width:50px;margin:auto;font-size:20px">
		        +
	                              
	        </button>
	        <button class="btn btn-success btn-lg" type="button" id="delete-ans" data-toggle="dropdown" style="width:50px;margin:auto;font-size:20px">
	            -
	          
	        </button>
	        <br>
			<div id="ans">
				
			</div>			
			<input type="submit" value="Submit">
		</form> 
	</div>
	<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 ">
		<div class="field">
			
			<select id="qcategories">
			  <% @categories.each do |category| %>
			    <option value="<%= category.name %>"><%= category.name %></option>      
			  <% end %>
			</select>
			<strong>:دسته بندی</strong>
		</div>	
	</div>
</div>
<% end %>

