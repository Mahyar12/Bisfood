<p id="notice"><%= notice %></p>

<h1>User Answers</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>User</th>
      <th>Competition</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_answers.each do |user_answer| %>
      <tr>
        <td><%= user_answer.question_id %></td>
        <td><%= user_answer.user_id %></td>
        <td><%= user_answer.competition_id %></td>
        <td><%= user_answer.status %></td>
        <td><%= link_to 'Show', user_answer %></td>
        <td><%= link_to 'Edit', edit_user_answer_path(user_answer) %></td>
        <td><%= link_to 'Destroy', user_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Answer', new_user_answer_path %>
